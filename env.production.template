# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Voice-to-App SaaS Platform"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# SECURITY (REQUIRED - CHANGE THESE!)
# =============================================================================
# Generate strong secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-production-secret-key-min-32-chars-CHANGE-THIS
JWT_SECRET=your-production-jwt-secret-min-32-chars-CHANGE-THIS
ENCRYPTION_KEY=your-production-encryption-key-min-32-chars-CHANGE-THIS

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# REDIS (Upstash recommended for zero-cost)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# PAYMENT PROVIDERS
# =============================================================================

# Razorpay (India)
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_API_KEY=rzp_live_your_key_here
RAZORPAY_API_SECRET=your_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# PayPal (International)
# Get keys from: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_webhook_id
PAYPAL_SANDBOX=false  # Set to true for testing, false for production

# Google Pay
GOOGLE_PAY_MERCHANT_ID=your-google-pay-merchant-id
GOOGLE_PAY_API_KEY=your-google-pay-api-key

# UPI (India)
UPI_MERCHANT_ID=your-upi-merchant-id
UPI_MERCHANT_NAME=your-merchant-name

# =============================================================================
# AI PROVIDERS (Zero-Cost Options)
# =============================================================================

# Groq (FREE for developers - Recommended)
# Get key from: https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key
GROQ_MODEL_NAME=llama2-70b-4096

# Together AI ($5 credit - Fallback)
# Get key from: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key
TOGETHER_MODEL_NAME=meta-llama/Llama-2-70b-chat-hf

# Hugging Face (FREE tier - Second fallback)
# Get key from: https://huggingface.co/settings/tokens
HF_API_KEY=your_hf_api_key
HF_MODEL_NAME=microsoft/DialoGPT-medium

# AI Provider Priority
AI_PROVIDER_PRIORITY=groq,together,local_llm,huggingface
ENABLE_AI_PROVIDER_FALLBACK=true

# Local AI (Optional)
ALLOW_LOCAL_LLM=false  # Set to true to enable local models
LOCAL_MODEL_PATH=./models/

# =============================================================================
# WHATSAPP BUSINESS API (Meta)
# =============================================================================
# Get credentials from: https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/v0/webhooks/whatsapp
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# CLOUDFLARE (FREE CDN)
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ZONE_ID=your_zone_id

# =============================================================================
# HOSTING PLATFORMS
# =============================================================================

# Railway (FREE $5/month credit)
RAILWAY_API_TOKEN=your_railway_token
RAILWAY_PROJECT_ID=your_project_id

# Render (FREE 750 hours/month)
RENDER_API_KEY=your_render_api_key
RENDER_SERVICE_ID=your_service_id

# Deployment Configuration
ZERO_COST_MODE=true
DEPLOYMENT_PLATFORM=railway  # railway, render, or local
MAX_WORKERS=4
MAX_MEMORY_MB=512
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# EMAIL (PrivateEmail via Namecheap)
# =============================================================================
SMTP_HOST=smtp.privateemail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Optional error tracking)
SENTRY_DSN=https://your_sentry_dsn

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# DOMAIN & URLS
# =============================================================================
BASE_URL=https://your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Webhook URLs
RAZORPAY_WEBHOOK_URL=https://your-domain.com/api/v0/webhooks/razorpay
PAYPAL_WEBHOOK_URL=https://your-domain.com/api/v0/webhooks/paypal

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_VOICE_COMMANDS_PER_DAY=100
RATE_LIMIT_FREE_TIER_DAILY_LIMIT=20

# =============================================================================
# GAMIFICATION
# =============================================================================
POINTS_PER_APP_CREATED=100
POINTS_PER_APP_DEPLOYED=200
POINTS_PER_REFERRAL=50
POINTS_PER_SHARE=10

# =============================================================================
# FILE STORAGE
# =============================================================================
MAX_FILE_SIZE_MB=50
SUPABASE_STORAGE_BUCKET=generated-apps

# =============================================================================
# VOICE & FEATURES
# =============================================================================
ENABLE_VOICE_COMMANDS=true
VOICE_PROVIDER=web_speech_api  # or google_cloud, azure

# =============================================================================
# NOTES
# =============================================================================
# 1. NEVER commit this file with real values to version control
# 2. Keep this file secure and backed up
# 3. Use strong, unique secrets for each environment
# 4. For PayPal: Set PAYPAL_SANDBOX=false for production
# 5. For AI: Groq is free and recommended as primary provider
# 6. For zero-cost deployment: Use Railway (FREE $5/month) or Render (FREE 750 hours)
# 7. WhatsApp Business API is free but requires Facebook Business verification

