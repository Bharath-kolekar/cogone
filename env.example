# ============================================================================
# COGNOMEGA PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# Command: copy env.example .env
# ============================================================================

# ============================================================================
# CORE APPLICATION SETTINGS (REQUIRED)
# ============================================================================
SECRET_KEY=your-secret-key-here-change-this-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-change-this-min-32-chars
JWT_SECRET=your-jwt-secret-here-change-this-min-32-chars

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ============================================================================
# DATABASE CONFIGURATION - SUPABASE (REQUIRED)
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Database Connection String (from Supabase Settings -> Database)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# REDIS CACHE - UPSTASH (OPTIONAL)
# ============================================================================
# Get these from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-id.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Local Redis (Alternative - if running Redis locally)
REDIS_URL=redis://localhost:6379

# Cache Settings
CACHE_BACKEND=redis
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (REQUIRED for Next.js)
# ============================================================================
# These MUST start with NEXT_PUBLIC_ to be accessible in browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# LOCAL AI - OLLAMA (Free, runs on your PC) - OPTIONAL
# ============================================================================
# Download from: https://ollama.ai/download
# After install, run: ollama pull llama3:8b-instruct-q4_K_M
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=4000
OLLAMA_TIMEOUT=120

# Local AI Paths (Windows - adjust USERNAME if needed)
OLLAMA_BIN_PATH=C:\Users\%USERNAME%\AppData\Local\Programs\Ollama\ollama.exe
OLLAMA_MODELS_PATH=C:\Users\%USERNAME%\.ollama\models

# AI Settings
LOCAL_AI_ENABLED=true
LOCAL_AI_FALLBACK_TO_REMOTE=true
LOCAL_AI_BATCH_SIZE=4
LOCAL_AI_MAX_CONCURRENT=2

# ============================================================================
# CLOUD AI PROVIDERS (Pay-per-use) - OPTIONAL
# ============================================================================
# Use these as fallback when local AI is not available or sufficient

# Groq (Fast, Free tier available) - RECOMMENDED
# Get key from: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here-optional
GROQ_MODEL=llama3-8b-8192
GROQ_MAX_TOKENS=8000
GROQ_TEMPERATURE=0.7

# OpenAI (Fallback)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-optional
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude (Fallback)
# Get key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-optional
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Together AI (Fallback)
# Get key from: https://api.together.xyz
TOGETHER_API_KEY=your-together-api-key-optional
TOGETHER_MODEL_NAME=meta-llama/Llama-2-70b-chat-hf

# AI Service Configuration
AI_SERVICE_PRIORITY=groq,local,openai,anthropic
AI_SERVICE_TIMEOUT=30
AI_SERVICE_RETRY_COUNT=3
AI_DAILY_LIMIT=100
AI_MONTHLY_LIMIT=1000

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_HASH_ALGORITHM=bcrypt

# Session Settings
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_CONCURRENT=5
SESSION_CLEANUP_INTERVAL=300
SESSION_STORAGE_BACKEND=redis

# ============================================================================
# OAUTH PROVIDERS - OPTIONAL
# ============================================================================
# Google OAuth (Get from: https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id-optional
GOOGLE_CLIENT_SECRET=your-google-client-secret-optional
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# GitHub OAuth (Get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id-optional
GITHUB_CLIENT_SECRET=your-github-client-secret-optional
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# OAuth Settings
OAUTH_STATE_EXPIRE_MINUTES=10
OAUTH_TOKEN_EXPIRE_HOURS=1

# ============================================================================
# PAYMENT PROVIDERS (Test Mode) - OPTIONAL
# ============================================================================
# Razorpay (Get from: https://dashboard.razorpay.com)
RAZORPAY_KEY_ID=your-razorpay-test-key-id-optional
RAZORPAY_KEY_SECRET=your-razorpay-test-key-secret-optional
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret-optional

# PayPal Sandbox (Get from: https://developer.paypal.com)
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id-optional
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret-optional
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id-optional

# Google Pay
GOOGLE_PAY_MERCHANT_ID=your-google-pay-merchant-id-optional

# Payment Settings
PAYMENT_MODE=test
PAYMENT_CURRENCY=USD
PAYMENT_WEBHOOK_TIMEOUT=30

# ============================================================================
# EMAIL CONFIGURATION - OPTIONAL
# ============================================================================
# SMTP Settings (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_USE_TLS=true

# Email Settings
EMAIL_FROM_NAME=CognOmega Platform
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_TEMPLATE_DIR=app/templates/email

# ============================================================================
# MESSAGING - OPTIONAL
# ============================================================================
# Twilio (WhatsApp/SMS) - Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid-optional
TWILIO_AUTH_TOKEN=your-twilio-auth-token-optional
TWILIO_PHONE_NUMBER=your-twilio-phone-number-optional
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================================================
# MONITORING & ANALYTICS - OPTIONAL
# ============================================================================
# Sentry (Error Tracking) - Get from: https://sentry.io
SENTRY_DSN=your-sentry-dsn-optional

# OpenTelemetry
OTEL_SERVICE_NAME=cognomega-platform
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Telemetry Settings
TELEMETRY_ENABLED=true
TELEMETRY_BACKEND=prometheus
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL=60

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================
# Memory Management
MAX_MEMORY_USAGE=14GB
MEMORY_CLEANUP_INTERVAL=300
MEMORY_MONITORING_ENABLED=true

# Worker Configuration
WORKER_PROCESSES=4
WORKER_THREADS=2
WORKER_MAX_REQUESTS=1000
WORKER_TIMEOUT=30

# Connection Pooling
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAX_OVERFLOW=30
CONNECTION_POOL_TIMEOUT=30

# Caching Strategy
CACHE_STRATEGY=lru
CACHE_HIT_RATIO_TARGET=0.8
CACHE_WARMUP_ENABLED=true

# ============================================================================
# SECURITY & RATE LIMITING
# ============================================================================
# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000
RATE_LIMIT_BURST_LIMIT=10

# Security Headers
SECURE_HEADERS=true
HTTPS_ONLY=false
CSP_ENABLED=true
HSTS_ENABLED=false

# Input Validation
INPUT_VALIDATION_ENABLED=true
MAX_REQUEST_SIZE=10MB
MAX_FILE_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,py,js,ts,json

# API Security
API_KEY_REQUIRED=false
API_RATE_LIMIT_ENABLED=true
API_LOGGING_ENABLED=true

# ============================================================================
# SMART CODING AI SETTINGS
# ============================================================================
# Memory System
MEMORY_ENABLED=true
MEMORY_MAX_SIZE=10000
MEMORY_TTL=86400
MEMORY_BACKEND=redis

# Codebase Analysis
CODEBASE_ANALYSIS_ENABLED=true
CODEBASE_ANALYSIS_INTERVAL=3600
CODEBASE_ANALYSIS_DEPTH=5
CODEBASE_ANALYSIS_CONCURRENT=3

# Pattern Recognition
PATTERN_RECOGNITION_ENABLED=true
PATTERN_RECOGNITION_THRESHOLD=0.8
PATTERN_RECOGNITION_MIN_OCCURRENCES=3

# Code Generation
CODE_GENERATION_ENABLED=true
CODE_GENERATION_MAX_LENGTH=5000
CODE_GENERATION_TEMPERATURE=0.7
CODE_GENERATION_TOP_P=0.9

# ============================================================================
# AI ORCHESTRATION SETTINGS
# ============================================================================
# Orchestration
ORCHESTRATION_ENABLED=true
ORCHESTRATION_MAX_CONCURRENT_TASKS=10
ORCHESTRATION_TIMEOUT_SECONDS=300
ORCHESTRATION_RETRY_COUNT=3

# Multi-Agent Coordination
MULTI_AGENT_ENABLED=true
MULTI_AGENT_MAX_AGENTS=5
MULTI_AGENT_TIMEOUT_SECONDS=600
MULTI_AGENT_COORDINATION_STRATEGY=adaptive

# Task Decomposition
TASK_DECOMPOSITION_ENABLED=true
TASK_DECOMPOSITION_MAX_DEPTH=5
TASK_DECOMPOSITION_STRATEGY=hierarchical

# Hierarchical Orchestration
HIERARCHICAL_ORCHESTRATION_ENABLED=true
HIERARCHICAL_MAX_LEVELS=6
HIERARCHICAL_LOAD_BALANCING=true

# ============================================================================
# ANALYTICS & METRICS
# ============================================================================
# Performance Metrics
PERFORMANCE_METRICS_ENABLED=true
PERFORMANCE_METRICS_INTERVAL=60
PERFORMANCE_METRICS_RETENTION_DAYS=30

# User Analytics
USER_ANALYTICS_ENABLED=true
USER_ANALYTICS_PRIVACY_MODE=true

# Business Metrics
BUSINESS_METRICS_ENABLED=true
BUSINESS_METRICS_DASHBOARD=true
BUSINESS_METRICS_ALERTS=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Development Mode
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_HOT_RELOAD=true

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/cognomega_test
TEST_REDIS_URL=redis://localhost:6379/1

# Local Development Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432

# Node.js Settings
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=8192

# Python Virtual Environment
PYTHON_VENV_PATH=.\venv
PYTHON_REQUIREMENTS_FILE=requirements.txt

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AUTH_MIDDLEWARE=true
ENABLE_CORS=true
ALLOW_LOCAL_LLM=true
ENABLE_VOICE_COMMANDS=true
ENABLE_GAMIFICATION=true
ENABLE_REFERRALS=true
ENABLE_TEMPLATES_MARKETPLACE=true
ENABLE_COLLABORATIVE_EDITING=true

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# Remember: Never commit .env file to Git!
# This file contains sensitive credentials.
# ============================================================================

