# ============================================================================
# ZERO-COST DEPLOYMENT CONFIGURATION
# Copy this to .env and fill in your free tier credentials
# Total Cost: $0-5/month
# ============================================================================

# Deployment Mode
ZERO_COST_MODE=true
DEPLOYMENT_PLATFORM=railway
ENVIRONMENT=production
DEBUG=false

# Resource Limits (Optimized for Free Tier)
MAX_WORKERS=4
MAX_MEMORY_MB=512
MAX_CONCURRENT_REQUESTS=10
LOG_LEVEL=INFO

# Security (Generate strong random values)
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# Database - Supabase (FREE tier: 500MB, 2GB bandwidth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Cache - Upstash Redis (FREE tier: 10k commands/day)
REDIS_URL=rediss://your-upstash-url:6379
UPSTASH_REDIS_URL=rediss://your-upstash-url:6379

# AI Providers (ZERO-COST)
# Primary: Groq (FREE for developers)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL_NAME=llama2-70b-4096

# Secondary: Together AI ($5 credit you have)
TOGETHER_API_KEY=your-together-api-key
TOGETHER_MODEL_NAME=meta-llama/Llama-2-70b-chat-hf

# AI Provider Priority
AI_PROVIDER_PRIORITY=groq,together,local_llm

# Frontend URL
FRONTEND_URL=https://your-app.vercel.app
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Feature Flags (Optimized for zero-cost)
ENABLE_AUTH_MIDDLEWARE=false
ENABLE_CORS=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30
